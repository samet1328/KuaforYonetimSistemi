@{
    ViewData["Title"] = "Varyasyon Sonucu";
}
<h2>Fotoğraf Varyasyon Sonucu</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
else
{
    <div>
        <p>Orijinal Fotoğraf:</p>
        <img src="@ViewBag.OriginalImagePath" alt="Original" style="max-width:300px;" />
    </div>
    <div class="mt-3">
        <p>OpenAI Tarafından Oluşturulan Varyasyon:</p>
        <img src="@ViewBag.VariationImageUrl" alt="Variation" style="max-width:300px;" />
    </div>
}
